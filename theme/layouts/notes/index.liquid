{% include 'head' %}
{% include 'header' %}
<main class="page container">
    <header class="page-header stack">
        <p class="eyebrow">Notes</p>
        <p class="lede">Unpolished fragments and observations. Same size, lighter weight.</p>
        <a href="/notes.xml" class="inline-link">RSS</a>
    </header>

    <section class="stack notes-list">
        {% for note in notes %}
        <article class="note-row">
            <a href="/notes/{{ note.id }}/" class="note-link">
                <time datetime="{{ note.date }}" class="muted">{{ note.date }}</time>
                <div class="note-body">
                    {{ note.html_content }}
                </div>
            </a>
        </article>
        {% endfor %}
        {% if notes.size == 0 %}
        <p>No notes yet.</p>
        {% endif %}
    </section>
</main>
{% include 'footer' %}
