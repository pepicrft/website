{% include 'head' %}
{% include 'header' %}
<main class="page container">
    <header class="page-header stack">
        <p class="eyebrow">Writing</p>
        <p class="lede">Long-form notes on building tools, running systems, and keeping software humane.</p>
        <a href="/feed.xml" class="inline-link">RSS</a>
    </header>

    <section class="stack posts-list">
        {% for post in posts %}
        <article class="post-row">
            <time datetime="{{ post.date }}" class="muted">{{ post.date }}</time>
            <div class="post-row-body">
                <a href="/blog/{{ post.slug }}/" class="post-link">{{ post.frontmatter.title }}</a>
                {% if post.frontmatter.description %}<p class="muted">{{ post.frontmatter.description }}</p>{% endif %}
            </div>
        </article>
        {% endfor %}
        {% if posts.size == 0 %}
        <p>No posts yet.</p>
        {% endif %}
    </section>
</main>
{% include 'footer' %}
